# Import the CMS content for the powertools site
#
$contentCatalog=powertools-spaContentCatalog
$contentCV=catalogVersion(CatalogVersion.catalog(Catalog.id[default=$contentCatalog]),CatalogVersion.version[default=Staged])[default=$contentCatalog:Staged]
$siteResource=jar:de.hybris.platform.spartacussampledata.constants.SpartacussampledataConstants&/spartacussampledata/import/contentCatalogs/powertoolsContentCatalog
$picture=media(code, $contentCV)
$medias=medias(code, $contentCV);
$mediaContainer=media(qualifier, $contentCV)[lang=$lang];
$lang=en

# CMS Link Components
UPDATE CMSLinkComponent;$contentCV[unique=true];uid[unique=true];linkName[lang=en]
 ;;CartLink;"Cart"
 ;;FAQLink;"Frequently Asked Questions"
 ;;HelpLink;"Help"
 ;;MyCompanyLink;"My Company"
 ;;OrdersLink;"Orders"
 ;;SignOutLink;"Sign Out"
 ;;StoreFinderLink;"Find a Store"

